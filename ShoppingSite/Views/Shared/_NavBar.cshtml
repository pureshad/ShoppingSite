<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
            @Html.ActionLink("IShowWatch", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="navbar-collapse collapse">
            <ul class="nav navbar-nav">
                <li>@Html.ActionLink("Home", "Index", "Home")</li>
                @if (User.IsInRole("IsAdmin"))
                {
                    <li>@Html.ActionLink("User", "Index", "User")</li>
                }
            </ul>
            @Html.Partial("_LoginPartial")
            <ul class="nav navbar-nav navbar-right">
                @if (User.Identity.IsAuthenticated)
                {
                    if (true) /*Model.ShoppingCarts.Count != 0*/
                    {
                        <li style="color:white;">
                            <a href="/ShoppingCart/Index">
                                <span class="glyphicon glyphicon-shopping-cart">
                                    &nbsp;(@*@Model.ShoppingCarts.Count*@)
                                </span>
                            </a>
                        </li>
                    }
                    else if (true) /*Model.ShoppingCarts.Count == 0*/
                    {
                        <li style="color:white;">
                            <a href="/ShoppingCart/Index">
                                <span class="glyphicon glyphicon-shopping-cart">
                                    &nbsp;(0)
                                </span>
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
</div>

