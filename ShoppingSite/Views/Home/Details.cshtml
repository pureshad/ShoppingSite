@model ShoppingSite.Models.Entitys.Products

@using ShoppingSite.Models
@{
    ViewBag.Title = "ViewDetails";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Product Details</h2>
<div class="form-border row">
    <div class="col-sm-8">
        <div class="form-group row">
            <div class="col-sm-4">
                <p>Brand Name: @Html.DisplayFor(w => w.Name)</p>
            </div>
            <div class="col-sm-8">
                <p>Creation Time: @Html.DisplayFor(w => w.CreatedTime)</p>
            </div>
        </div>
        <div class="form-group row">

            <div class="col-sm-4">
                <p>Category :@Html.DisplayFor(w => w.CategoryType.Name)</p>
            </div>

            <div class="col-sm-8">
                <p>Watch price :  @Html.DisplayFor(w => w.Price)$</p>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                <p>Strap Quality: @Html.DisplayFor(w => w.StrapQuality)</p>
            </div>

            <div class="col-sm-8">
                <p>Quantity Available : @Html.DisplayFor(w => w.NumberAvailable)</p>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                <p>Display Type:  @Html.DisplayFor(w => w.DisplayType)</p>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-sm-4">
                <label class="custom-label">Details:</label>
            </div>
            <div class="col-sm-8">
                <label class="custom-label"> @Html.DisplayFor(w => w.Description)</label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-4">
                <label class="custom-label">Select Amount:</label>
            </div>
            <div class="col-sm-8">
                <label class="custom-label"> @*@Html.DisplayFor(w => )*@</label>
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-4">
                <a href="/Home/Index" type="button" class="btn btn-sm btn-primary">Back To List</a>

                @if (User.IsInRole(StaticRoles.IsAdmin))
                {
                    @Html.ActionLink("Edit", "Edit", "Home", new { id = Model.Id }, new { @class = "btn btn-sm btn-success" })
                    @Html.ActionLink("Delete", "Delete", "Home", new { id = Model.Id }, new { @class = "btn btn-sm btn-danger" })
                }
            </div>
            <div class="col-md-8">
                @Html.ActionLink("Cart", "AddProduct", "Home", new { id = Model.Id }, new { @class = "btn btn-primary glyphicon glyphicon-shopping-cart" })
            </div>
        </div>
    </div>

    <div class="col-sm-3 col-sm-offset-0">
        <img class="responsive" src="~/Images/@Model.Image" style="width:350px; height:350px;" alt="image cap">
    </div>
</div>
@Html.HiddenFor(q => q.Id)