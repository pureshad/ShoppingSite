@model ShoppingSite.ViewModels.OrderDetailsCartViewModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Shopping Cart</h2>
@using (Html.BeginForm("PlaceOrder", "ShoppingCart"))
{
    if (Model.ShoppingCarts.Count > 0)
    {
        <div class="row form-border">
            <table>
                <tr>
                    <th></th>
                    <th style="width:70px; text-align:center">
                        @Html.LabelFor(w => w.ShoppingCarts.FirstOrDefault().Products.Price)
                    </th>
                    <th style="width:70px; text-align:center">
                        @Html.LabelFor(w => w.ShoppingCarts.FirstOrDefault().Count)
                    </th>
                    <th></th>
                </tr>
                @foreach (var item in Model.ShoppingCarts)
                {
                    <tr style="border-bottom:1px solid #e9e4e4"></tr>
                    <tr class="paddingB30pxToTD">
                        <td>
                            <b>@Html.DisplayFor(c => item.Products.Name)</b>
                            <br />
                            <b>@Html.DisplayFor(c => item.Products.Description)</b>
                        </td>

                        <td style="width:70px; text-align:center">
                            <b>@Html.DisplayFor(c => item.Products.Price)</b>
                        </td>
                        <td style="width:70px; text-align:center">
                            <b>@Html.DisplayFor(c => item.Count)</b>
                        </td>
                        <td>
                            @Html.ActionLink("+", "PlusProduct", "ShoppingCart", new { id = item.Id }, new { @class = "btn btn-sm btn-success glyphicon" })
                        </td>
                        <td>
                            @Html.ActionLink("-", "MinusProduct", "ShoppingCart", new { id = item.Id }, new { @class = "btn btn-sm btn-danger glyphicon" })
                        </td>
                    </tr>

                }
            </table>
            <hr />
            <div class="row">
                <div class="col-sm-2">
                    <label class="custom-label">Order Total :</label>
                </div>
                <div class="col-sm-3">
                    @Html.LabelFor(w => w.OrderHeader.OrderTotal) :
                    @Html.TextBoxFor(w => w.OrderHeader.OrderTotal, new { @class = "form-control", disabled = "disabled" })
                </div>
            </div>

            <div class="row">
                <div class="col-sm-2">
                    <label class="custom-label">Comments :</label>
                </div>
                <div class="col-sm-10">
                    <textarea style="height:100px;" asp-for="@Model.OrderHeader.Comments" class="form-control"></textarea>
                </div>
            </div>
            <div class="row" style="padding-top:5px;">
                <div class="col-sm-5 text-right">
                    <button type="submit" class="btn btn-primary">Submit Order</button>
                </div>
            </div>

        </div>
    }
    else
    {
        <h3>No Items In Cart...</h3>
    }
}
