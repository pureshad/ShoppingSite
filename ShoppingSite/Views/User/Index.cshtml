@model IEnumerable<ShoppingSite.Models.Entitys.User>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Users Page</h2>
<div class="form-group">
    <table class="table table-bordered table-hover">
        <thead>
            <tr>
                <td>Name</td>
                <td>Last Name</td>
                <td>Birth Date</td>
                <td>Email</td>
                <td>Edit</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
            <tr>
                <th>@user.FirstName</th>
                <th>@user.LastName</th>
                <th>@user.BirthDate</th>
                <th>@user.Email</th>
                <th>@Html.ActionLink("Edit ", "Edit", "User", new { id = user.Id }, new { @class = "btn btn-success btn-sm glyphicon glyphicon-edit" })</th>
                <th>@Html.ActionLink("Delete ", "Delete", "User", new { id = user.Id }, new { @class = "btn btn-danger btn-sm glyphicon glyphicon-trash",
                                                                                            onclick = "return confirm('are you sure you want to delete this user?')" })</th>
            </tr>
            }
        </tbody>
    </table>
    <div class="form-group">
        <a href="/User/CreateUser" class="btn btn-primary">Create New User</a>
    </div>
</div>

